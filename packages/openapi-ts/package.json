{
  "name": "openapi-ts",
  "private": true,
  "version": "0.1.1",
  "type": "module",

  "exports": "./dist/esm/index.js",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",

  "scripts": {
    "dev": "vite-node ./src/index.ts",
    "start": "node --no-warnings --loader ts-node/esm ./src/index.ts",
    "build": "yarn build:esm && yarn build:cjs",
    "build:esm": "tsc && tsc-alias -p tsconfig.json",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs && tsc-alias -p tsconfig.json",
    "prepare": "yarn build"
  },
  "bin": {
    "openapi-ts": "./dist/index.js"
  },
  "devDependencies": {
    "@types/yargs": "^17.0.32",
    "eslint-plugin-linter": "^0.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.3.2",
    "vite": "^5.0.0",
    "vite-node": "^0.34.6"
  },
  "dependencies": {
    "openapi-typescript": "^6.5.5",
    "yargs": "^17.7.2"
  }
}
